  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :masterpiece
    = f.text_field :masterpiece
  .field
    = f.label :image_uid
    = f.text_field :image_uid
  .field
    = f.label :height
    = f.text_field :height
  .field
    = f.label :width
    = f.text_field :width
  .field
    = f.label :x
    = f.text_field :x
