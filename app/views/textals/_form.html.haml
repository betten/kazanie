= form_for @textal do |f|
  -if @textal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@textal.errors.count, "error")} prohibited this textal from being saved:"
      %ul
        - @textal.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :top
    = f.text_field :top
  .field
    = f.label :left
    = f.text_field :left
  .field
    = f.label :height
    = f.text_field :height
  .field
    = f.label :width
    = f.text_field :width
  .field
    = f.label :text
    = f.text_area :text
  .actions
    = f.submit 'Save'
