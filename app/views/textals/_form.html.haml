  .field
    = f.label :masterpiece
    = f.text_field :masterpiece
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :cx
    = f.text_field :cx
  .field
    = f.label :cy
    = f.text_field :cy
  .field
    = f.label :radius
    = f.text_field :radius
  .field
    = f.label :color
    = f.text_field :color
