!!!
%html
  %head

    %title= "kazanie - #{@project.name} Project"

    -# stylesheets
    = stylesheet_link_tag "reset"
    = stylesheet_link_tag "project"
    = stylesheet_link_tag "fancybox/jquery.fancybox-1.3.4"

    -# js libs
    = javascript_include_tag "lib/jquery-min"
    = javascript_include_tag "lib/underscore-min"
    = javascript_include_tag "lib/backbone-min"
    = javascript_include_tag "lib/icanhaz-min"
    = javascript_include_tag "lib/fancybox/jquery.fancybox-1.3.4.pack"
    = javascript_include_tag "lib/fancybox/jquery.easing-1.3.pack"
    = javascript_include_tag "lib/fancybox/jquery.mousewheel-3.0.4.pack"

    -# model and collection objects
    = javascript_include_tag "objects"

    -# generate project masterpieces
    = render :partial => "projects/masterpieces", :locals => { :project => @project }

    -# init kazanie project
    = javascript_include_tag "kazanie"

    -# templates
    = render :partial => "projects/templates"

    = csrf_meta_tag

  %body
    
    = yield
